<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

	<!--Синий -  #445c93
	Красный - #e31e24
	Бирюзовый - #bae3e8
	Жёлтый -  #fac716
	Серый - #878787
	Коричневый - #634e42-->
	
	<Style Selector="TextBlock">
		<Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
		<Setter Property="Foreground" Value="#445c93"></Setter>
		<Setter Property="TextWrapping" Value="Wrap"></Setter>
		<Setter Property="FontWeight" Value="Bold"></Setter>
	</Style>

	<Style Selector="Border.Custom">
		<Setter Property="CornerRadius" Value="3"></Setter>
		<Setter Property="BorderBrush" Value="#445c93"></Setter>
		<Setter Property="BorderThickness" Value="3"></Setter>
	</Style>

	<Style Selector="Button">
		<Setter Property="Margin" Value="5"></Setter>
		<Setter Property="Background" Value="#bae3e8"></Setter>
		<Setter Property="BorderBrush" Value="#445c93"></Setter>
		<Setter Property="BorderThickness" Value="3"></Setter>
	</Style>

	<Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="#bae3e8"></Setter>
		<Setter Property="BorderBrush" Value="#bae3e8"></Setter>
		<Setter Property="BorderThickness" Value="3"></Setter>
	</Style>
</Styles>
